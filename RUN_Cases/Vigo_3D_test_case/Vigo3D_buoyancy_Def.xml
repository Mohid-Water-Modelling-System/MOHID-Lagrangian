<?xml version="1.0" encoding="UTF-8" ?>
<case>
	<execution>
		<parameters>
			<parameter key="Start" value="2018 09 05 00 00 00" comment="Date of initial instant" units_comment="space delimited ISO 8601 format up to seconds" />
			<parameter key="End"   value="2018 09 05 00 05 00" comment="Date of final instant" units_comment="ISO format" />
			<parameter key="Integrator" value="2" comment="Integration Algorithm 1:Euler, 2:Multi-Step Euler, 3:RK4 (default=1)" />			
			<parameter key="Threads" value="1" comment="Computation threads for shared memory computation (default=auto)" />
			<parameter key="OutputWriteTime" value="720" comment="Time out data (1/Hz)" units_comment="seconds" />
		</parameters>
		<variableNaming>
			<file name="ncNamesLibrary.xml"/>
		</variableNaming>
	</execution>
	<caseDefinitions>
		<inputData>
			<inputDataDir name="nc_fields/hydrodynamic" type="hydrodynamic"/>
      		<inputDataDir name="nc_fields/water_properties" type="waterProperties"/>
		</inputData>
		<simulation>
			<resolution dp="100" units_comment="metres (m)"/>
			<timestep dt="10.0" units_comment="seconds (s)"/>
			<!-- <BoundingBoxMin x="-8.95" y="42.10" z="-60" units_comment="(deg,deg,m)"/> -->
            <BoundingBoxMin x="-8.996" y="42.0812" z="-110" units_comment="(deg,deg,m)"/>
			<BoundingBoxMax x="-8.6051" y="42.447" z="0" units_comment="(deg,deg,m)"/>
            <VerticalVelMethod value="1" comment="1:From velocity fields, 2:Divergence based, 3:Disabled. Default = 1" />
            <RemoveLandTracer value="1" comment="Remove tracers on land 0:No, 1:Yes. Default = 1" />
		</simulation>
		<sourceDefinitions>
			<source>
				<setsource id="1" name="Minhor_cardboard_heavy_net" />
                <resolution x="200" y="200" z="2" units_comment="metres (m)"/>
				<rate_dt value="9996" comment="number of timesteps / emission. 1 is every timestep, 5 is every 5 timesteps" />
				<active start="0" end="end" comment="example: start='12.7' end='end'; start='0.0' end='95' " units_comment="seconds (s)" />
				<box>
					<point x="-8.85" y="42.2" z="-30" units_comment="(deg,deg,m)"/>
					<size x="200" y="200" z="2" units_comment="metres (m)"/>
				</box>
			</source>
		</sourceDefinitions>
		<sourceTypes>
			<types>
                <type source="1" type="plastic" property="heavy_net" comment="" />
			</types>
			<file name="materialTypes.xml"/>
		</sourceTypes>
		<constants>
			<BeachingLevel value="-3.0" comment="Level above which beaching can occur. Default = -3.0" units_comment="m" />
			<DiffusionCoeff value="0.75" comment="Horizontal diffusion coefficient. Default = 1.0" units_comment="m2/s" />	
            <ResuspensionCoeff value="0.1" comment="Resuspension amplitude velocity factor. Default = 0.0" units_comment="n.u" />
            <CriticalShearErosion value="0.1" comment="CriticalShearErosion value. Default = 0.4" units_comment="N/m2" />
            <Rugosity value="0.0025" comment="Rugosity value. Default = 0.0025" units_comment="m2/s" />
            <AddBottomCell value="1" comment="Open the first bottom cell with value equal to cell above. Default = 0.0" units_comment="n.u" />
		</constants>
	</caseDefinitions>
</case>
